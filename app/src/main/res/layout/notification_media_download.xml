<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/media_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/media_download_start_time"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/body_text_1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Download Media"/>

        <TextView
            android:id="@+id/media_download_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/media_dest_path"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textSize="10sp"
            android:textColor="@color/data_item_lightbg_body_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="9:57 AM"/>

        <TextView
            android:id="@+id/media_dest_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="4dp"
            android:layout_below="@id/media_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="8sp"
            android:textColor="@color/data_item_lightbg_body_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="@string/notification_dest_file_path"/>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/media_download_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/media_dest_path"
            android:indeterminate="false"/>

    </RelativeLayout>

</LinearLayout>